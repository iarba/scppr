#version 330 core

layout (location = 0) in vec3 v_pos;
layout (location = 1) in vec2 v_texture_coord;
layout (location = 2) in vec3 v_norm;

out vec3 f_pos;
out vec2 f_coord;
out vec3 f_norm;

uniform mat4 vp;
uniform mat4 m;

void main()
{
  vec4 m_pos = m * vec4(v_pos, 1);
  gl_Position = vp * m_pos;
  f_pos = vec3(m_pos);
  f_coord = v_texture_coord;
  f_norm = v_norm;
}
